package Practice;
/** 
* @Author -- TkGitcode
*/
public class Pattern2 extends Pattern{
	public static void main(String[] args) {
		
		int n=Pattern.sc.nextInt();
		for(int i=0;i<n;i++)
		{
			if(i!=0)
				System.out.println("*");
			else
			{
				for(int j=0;j<n;j++)
				{
					System.out.print("*");
					if(j==n-i)
						System.out.print("*");
					else
						System.out.print(" ");
				}
				System.out.println();
				}
		}
	}
	
}
