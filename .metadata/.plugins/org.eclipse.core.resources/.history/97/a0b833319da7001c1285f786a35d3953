package Practice;

import java.util.Scanner;

/** 
* @Author -- TkGitcode
*/
public class Codecheff {

	public static void main(String[] args) {
		Scanner sc=new Scanner(System.in);
		int n=sc.nextInt();
		for(int i=0;i<n;i++)
		{
		    int a=sc.nextInt();
		    int b=sc.nextInt();
		    if(a%3==0)
		    {
		    	System.out.println(a/3 * b * 2);
		    }
		    if(a%3==1)
		    {
		    	System.out.println(a/3 * (b*2) + 1 * b);
		    }
		    if(a%3==2)
		    {
		    	System.out.println(a/3 * b * 2 + 2 * b);
		    }
		}
	

	}

}
